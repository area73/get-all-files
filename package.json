{
  "name": "get-all-files-ts",
  "version": "1.0.0",
  "description": "This is a get-all-files verison writed in TS",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "lint:fix": "xo --fix"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/area73/get-all-files-ts.git"
  },
  "keywords": [
    "node",
    "typescript",
    "file",
    "handlers",
    "readers",
    "recursive"
  ],
  "author": "Rodrigo Erades <rerades@siete3.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/area73/get-all-files-ts/issues"
  },
  "homepage": "https://github.com/area73/get-all-files-ts#readme",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "babel-jest": "^27.4.6",
    "eslint": "^7.32.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "xo": "^0.47.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-param-reassign": "error",
      "unicorn/no-array-reduce": "off",
      "@typescript-eslint/no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": true
        }
      ],
      "@typescript-eslint/no-loop-func": "off",
      "import/extensions": "off",
      "unicorn/prefer-module": "off"
    }
  },
  "jest": {
    "clearMocks": true,
    "coverageProvider": "v8",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
